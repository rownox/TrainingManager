@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3>@ViewData["Title"]</h3>
<form id="profile-form" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <div>
        <label asp-for="Username"></label>
        <input asp-for="Username" placeholder="Please choose your username." disabled />
    </div>
    <div>
        <label asp-for="Input.PhoneNumber"></label>
        <input asp-for="Input.PhoneNumber" placeholder="Please enter your phone number." />
        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
    </div>
    <button id="update-profile-button" type="submit" class="btn bg-btn btnWhite">Save</button>
    <button class="btn bg-btn btnWhite" onclick="toggleLightMode()">Toggle Theme</button>
</form>

<script>
    function enableLightMode() {
        document.documentElement.classList.add('light-mode');
    }

    function disableLightMode() {
        document.documentElement.classList.remove('light-mode');
    }

    function toggleLightMode() {
        const isLightMode = localStorage.getItem('lightMode') === 'true';

        if (isLightMode) {
            localStorage.setItem('lightMode', 'false');
            disableLightMode();
        } else {
            localStorage.setItem('lightMode', 'true');
            enableLightMode();
        }
    }

    const isLightMode = localStorage.getItem('lightMode') === 'true';

    if (isLightMode) {
        enableLightMode();
    }

</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
