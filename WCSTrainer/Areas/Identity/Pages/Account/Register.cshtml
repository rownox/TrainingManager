@page
@model RegisterModel
@{
}

<div class="login-container">
    <p class="title">Register</p>
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

        <div class="field">
            <label class="label" asp-for="Input.Email">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
            <input asp-for="Input.Email" autocomplete="username" aria-required="true" placeholder="name@example.com" />
        </div>
        <div class="field">
            <label class="label" asp-for="Input.EmployeeID">Employee ID</label>
            <span asp-validation-for="Input.EmployeeID" class="text-danger"></span>
            <input asp-for="Input.EmployeeID" autocomplete="new-password" aria-required="true" placeholder="password" />
        </div>
        <div class="field">
            <label class="label" asp-for="Input.Password">Password</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
            <input asp-for="Input.Password" autocomplete="new-password" aria-required="true" placeholder="password" />
        </div>
        <div class="field">
            <label class="label" asp-for="Input.ConfirmPassword">Confirm Password</label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" placeholder="password" />
        </div>
        <div class="login-btns">
            <button id="registerSubmit" type="submit" class="btn bg-btn btnWhite">Register</button>
        </div>
    </form>
</div>
