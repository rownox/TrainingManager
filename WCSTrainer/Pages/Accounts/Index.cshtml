@page
@model WCSTrainer.Pages.AccountManager.IndexModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<UserAccount> SignInManager
@inject UserManager<UserAccount> UserManager

<div class="panel">
   <div class="body">
      <partial name="_Sidebar" />
      <div class="properties">
         <div class="flex-column">
            <p class="title">Account Manager</p>
            <div class="order-list2">
               <table id="dataTable">
                  <tr>
                     <th>Username</th>
                     <th>Role</th>
                     <th></th>
                  </tr>
                  @foreach (var item in Model.Users) {
                     <tr class="clickable">
                        <td>@item.UserName</td>
                        <td>
                           @{
                              var roles = await UserManager.GetRolesAsync(item);
                              foreach (var role in roles) {
                                 @role
                              }
                           }
                        </td>
                        <td>
                           <a asp-page="./Details" asp-route-id="@item.Id" class="btn nbg-btn btnWhite">
                              View
                           </a>
                        </td>
                     </tr>
                  }
               </table>
            </div>
         </div>
      </div>
   </div>
</div>