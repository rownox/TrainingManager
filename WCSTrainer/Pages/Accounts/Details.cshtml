@page
@model WCSTrainer.Pages.Accounts.DetailsModel
@{
}

<div class="panel">
   <div class="body">
      <component type="typeof(Sidebar)" render-mode="WebAssemblyPrerendered" />
      <div class="properties">
         <div class="user-form">
            @if (Model.UserAccount != null) {
               <p class="title">User Account @Model.UserAccount.Id</p>
               <div class="field-container">
                  <div class="title-row">
                     <p class="title">Account Info</p>
                  </div>
                  <div class="text-group">
                     <p class="title">Username</p>
                     <p class="info">@Model.UserAccount.UserName</p>
                  </div>
                  <div class="text-group">
                     <p class="title">Email</p>
                     <p class="info">@Model.UserAccount.Email</p>
                  </div>
                  <div class="text-group">
                     <p class="title">Phone Number</p>
                     <p class="info">@Model.UserAccount.PhoneNumber</p>
                  </div>

                  @if (Model.Employee != null) {
                     <div class="title-row">
                        <p class="title">Employee Info</p>
                     </div>
                     <div class="text-group">
                        <p class="title">Employee ID</p>
                        <p class="info">@Model.Employee.Id</p>
                     </div>
                     <div class="text-group">
                        <p class="title">First Name</p>
                        <p class="info">@Model.Employee.FirstName</p>
                     </div>
                     <div class="text-group">
                        <p class="title">Last Name</p>
                        <p class="info">@Model.Employee.LastName</p>
                     </div>
                     <div class="text-group">
                        <p class="title">Status</p>
                        <p class="info">@Model.Employee.Status</p>
                     </div>
                     <div class="text-group">
                        <p class="title">Skills</p>
                        <div class="info">
                           @foreach (var skill in Model.Employee.Skills) {
                              <p class="pill yellow">@skill.Name</p>
                           }
                        </div>
                     </div>
                     <div class="text-group">
                        <p class="title">Assigned Learning</p>
                        <div class="info">
                           @foreach (var order in Model.Employee.TrainingOrdersAsTrainee) {
                              <div class="pill">Training Order #@order.Id</div>
                           }
                        </div>
                     </div>
                     <div class="text-group">
                        <p class="title">Assigned Teaching</p>
                        <div class="info">
                           @foreach (var order in Model.Employee.TrainingOrdersAsTrainer) {
                              <div class="pill">Training Order #@order.Id</div>
                           }
                        </div>
                     </div>
                     <div class="btn-container">
                        <a class="btn bg-btn btnGreen" asp-page="./Employees/Edit" asp-route-id="@Model.UserAccount.EmployeeId">
                           Edit Info
                        </a>
                     </div>
                  }
               </div>
               
            }
         </div>
      </div>
   </div>
</div>
