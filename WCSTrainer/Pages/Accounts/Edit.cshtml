@page
@model WCSTrainer.Pages.Accounts.EditModel
@{
}

<div class="panel">
   <div class="body">
      <component type="typeof(Sidebar)" render-mode="WebAssemblyPrerendered" />
      <div class="properties">
         <div class="user-form">
            <div class="field-container">
               <form method="post">
                  <div asp-validation-summary="All" class="text-danger"></div>
                  <input asp-for="UserAccount.UserName" type="hidden" />
                  <div class="form-group">
                     <div class="form">
                        <div class="labels">
                           <label asp-for="UserAccount.Email" class="control-label"></label>
                           <span asp-validation-for="UserAccount.Email" class="text-danger"></span>
                        </div>
                        <input asp-for="UserAccount.Email" class="form-control" />
                     </div>
                  </div>
                  <div class="form-group">
                     <input type="submit" value="Save" class="btn bg-btn btnGreen" />
                  </div>
               </form>
            </div>
         </div>
      </div>
   </div>
</div>