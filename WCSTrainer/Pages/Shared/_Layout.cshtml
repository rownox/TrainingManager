@using Microsoft.AspNetCore.Identity

<!DOCTYPE html>

<html lang="en">
   <head>
      <meta charset="utf-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <title>WCSTrainer</title>
      <link rel="icon" href="/images/favicon5.png">
      <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
      <link rel="stylesheet" href="~/css/mobile.css" asp-append-version="true" />
      <link rel="stylesheet" href="~/css/colors.css" asp-append-version="true" />
      <link rel="stylesheet" href="~/css/universal.css" asp-append-version="true" />
   </head>

   <body>
      <nav>
         <div class="nav-container">
            <div class="nav-buttons">
               <ul>
                  <li><a class="main-title">WCS Trainer 1.0.0</a></li>
                  <li><a asp-page="/Index" class="clickable">Home</a></li>
                  <li><a asp-page="/TrainingOrders/Index" class="clickable">My Panel</a></li>
               </ul>
            </div>
            <div class="nav-options">
               <partial name="_LoginPartial" />
            </div>
         </div>
      </nav>

      <div class="content">
         @RenderBody()
      </div>

      <script src="~/lib/jquery/dist/jquery.min.js"></script>
      <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
      <script src="~/js/site.js" asp-append-version="true"></script>
      @await RenderSectionAsync("Scripts", required: false)
   </body>
</html>

<script>
   function enableLightMode() {
      document.documentElement.classList.add('light-mode');
   }
   const isLightMode = localStorage.getItem('lightMode') === 'true';

   if (isLightMode) {
      enableLightMode();
   }
</script>