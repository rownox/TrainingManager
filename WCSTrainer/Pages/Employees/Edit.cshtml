@page
@model WCSTrainer.Pages.Employees.EditModel

@{
   ViewData["Title"] = "Edit";
}
<div class="panel">
   <div class="body">
      <partial name="_Sidebar" />
      <div class="properties">
         <div class="user-form">
            <div class="field-container">
               <form method="post">
                  <div asp-validation-summary="All" class="text-danger"></div>
                  <input asp-for="Employee.Id" hidden />
                  <input asp-for="Employee.UserAccountId" type="hidden" />
                  <div class="form-group">
                     <div class="form">
                        <div class="labels">
                           <label asp-for="Employee.FirstName" class="control-label"></label>
                           <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
                        </div>
                        <input asp-for="Employee.FirstName" class="form-control" />
                     </div>
                     <div class="form">
                        <div class="labels">
                           <label asp-for="Employee.LastName" class="control-label"></label>
                           <span asp-validation-for="Employee.LastName" class="text-danger"></span>
                        </div>
                        <input asp-for="Employee.LastName" class="form-control" />
                     </div>
                  </div>
                  <div class="form-group">
                     <div class="form">
                        <div class="labels">
                           <p class="control-label">Job Title</p>
                           <span asp-validation-for="Employee.JobTitle" class="text-danger"></span>
                        </div>
                        <input asp-for="Employee.JobTitle" class="form-control" />
                     </div>
                     <div class="form">
                        <div class="labels">
                           <p class="control-label">Activity</p>
                           <span asp-validation-for="Employee.Active" class="text-danger"></span>
                        </div>
                        <select asp-for="Employee.Active" class="form-drop2">
                           <option value="true">Active</option>
                           <option value="false">Inactive</option>
                        </select>
                     </div>
                  </div>
                  <div class="form-group">
                     <div class="form">
                        <div class="labels">
                           <p class="control-label">Employee ID</p>
                           <span asp-validation-for="Employee.EmployeeID" class="text-danger"></span>
                        </div>
                        <input asp-for="Employee.EmployeeID" class="form-control" />
                     </div>
                     <div class="form">
                        <div class="labels">
                           <p class="control-label">Shift</p>
                           <span asp-validation-for="Employee.Shift" class="text-danger"></span>
                        </div>
                        <select asp-for="Employee.Shift" class="form-drop2">
                           <option value="1">1st Shift</option>
                           <option value="2">2nd Shift</option>
                        </select>
                     </div>
                  </div>
                  <div class="form-group">
                     <div class="form">
                        <div id="Select Departments" class="multi-select-wrapper">
                           <select asp-for="SelectedDepartments" multiple class="multi-select-comp" size="@Model.Departments.Count()">
                              @foreach (var dept in Model.Departments) {
                                 <option selected="@(Model.Employee.TrainerDepartments.Contains(dept) ? "selected" : null)" value="@dept.Id">@dept.Name</option>
                              }
                           </select>
                        </div>
                     </div>
                  </div>
                  <div class="form-group">
                     <input type="submit" value="Save" class="btn bg-btn btnGreen" />
                  </div>
               </form>
            </div>
         </div>
      </div>
   </div>
</div>

<script src="~/js/pillMenu.js"></script>

@section Scripts {
   @{
      await Html.RenderPartialAsync("_ValidationScriptsPartial");
   }
}