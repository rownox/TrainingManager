@page
@model WCSTrainer.Pages.Employees.DeleteModel

@{
   ViewData["Title"] = "Delete";
}

<div class="panel">
   <div class="body">
      <partial name="_Sidebar" />
      <div class="properties">
         <div class="user-form">
            <p class="title">Employee #@Model.Employee.Id</p>
            <div class="field-container">
               <div class="text-group">
                  <p class="title">First Name</p>
                  <p class="info">@Model.Employee.FirstName</p>
               </div>
               <div class="text-group">
                  <p class="title">Last Name</p>
                  <p class="info">@Model.Employee.LastName</p>
               </div>
               <br />
               <form method="post" class="form-group">
                  <input hidden asp-for="Employee.Id" />
                  <input type="submit" value="Delete" class="btn bg-btn btnRed" />
               </form>
            </div>
         </div>
      </div>
   </div>
</div>