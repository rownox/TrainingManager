@page
@model WCSTrainer.Pages.Employees.IndexModel

@{
   ViewData["Title"] = "Index";
}

@using WCSTrainer.Components

<div class="panel">
   <div class="body">
      <component type="typeof(Sidebar)" render-mode="WebAssemblyPrerendered" />
      <div class="properties">
         <div class="flex-column">
            <p class="title">Employee Editor</p>
            <div class="order-list2">
               <table id="dataTable">
                  <tr>
                     <th>Employee ID</th>
                     <th>First Name</th>
                     <th>Last Name</th>
                     <th>Status</th>
                     <th></th>
                  </tr>
                  @foreach (var item in Model.Employees) {
                     <tr class="clickable">
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                        <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                        <td>
                           <a asp-page="./Details" asp-route-id="@item.Id" class="btn nbg-btn btnWhite">View</a>
                           <a asp-page="./Delete" asp-route-id="@item.Id" class="btn nbg-btn btnRed">Delete</a>
                        </td>
                     </tr>
                  }
               </table>
            </div>
         </div>
      </div>
   </div>
</div>


