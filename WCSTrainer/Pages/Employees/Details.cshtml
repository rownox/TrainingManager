@page
@model WCSTrainer.Pages.Accounts.Employees.DetailsModel
@{
}

<div class="panel">
   <div class="body">
      <partial name="_Sidebar" />
      <div class="properties">
         <div class="user-form">
            <div id="contentToPrint" class="print-block">
               <p class="title">@Model.Employee.FirstName @Model.Employee.LastName</p>
               <div class="field-container">
                  <component type="typeof(Person)" render-mode="WebAssemblyPrerendered" param-EmployeeId="@Model.Employee.Id" />
                  <div class="btn-container">
                     <a class="btn bg-btn btnGreen" asp-page="./Edit" asp-route-id="@Model.Employee.Id">
                        Edit Info
                     </a>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>