@page
@model WCSTrainer.Pages.TrainingOrders.SchedulingModel
@{
}

@using WCSTrainer.Pages.Components


<div class="panel">
    <div class="body">
        <component type="typeof(Sidebar)" render-mode="WebAssemblyPrerendered" />
        <div class="properties">
            <div class="scheduling">
                <div class="settings">
                    <p>Year: @Model.selectedYear</p>
                    <p>Total Training Orders: @Model.countOrders()</p>
                    <p>Total Training Hours: @Model.countTotalOrderHours()</p>
                </div>
                <div class="main-view">
                    <div class="schedule">
                        @for (int month = 1; month <= 12; month++) {
                            DateTime date = new DateTime(Model.selectedYear, month, 1);
                            string monthName = date.ToString("MMMM");
                            string type = "month-inactive";

                            if (DateTime.Now.Month == month) {
                                type = "month-active";
                            }

                            <div class="month @type">
                                <div class="title">
                                    <p>@monthName</p>
                                </div>
                                <div class="info">
                                    <p>Preview:</p>
                                    @if (Model.getFirstTrainingOrder(month, 0) != null) {
                                        var order = @Model.getFirstTrainingOrder(month, 0);
                                        <div class="order live">Order #@order.Id - @order.beginDate</div>
                                    } else {
                                        <div class="order gray"></div>
                                    }
                                    @if (Model.getFirstTrainingOrder(month, 1) != null) {
                                        var order = @Model.getFirstTrainingOrder(month, 1);
                                        <div class="order live">Order #@order.Id - @order.beginDate</div>
                                    } else {
                                        <div class="order gray"></div>
                                    }
                                </div>
                                <div class="stats">
                                    <p>Total Hours: @Model.countOrderHours(month)</p>
                                    <p>Training Orders: @Model.countMonthOrders(month)</p>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="options">
                        <div class="search">
                            <p>Search</p>
                            <input type="search" />
                        </div>
                        <div class="buttons">
                            <a class="btn nbg-btn btnWhite">Button</a>
                            <a class="btn nbg-btn btnWhite">Button</a>
                            <form method="post">
                                <input asp-for="selectedYear" value="@Model.selectedYear" />
                                <input type="submit" value="Save" class="btn bg-btn btnGreen" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>