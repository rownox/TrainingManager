@page
@model WCSTrainer.Pages.TrainingOrders.VerificationModel
@{
}

<div class="panel">
   <div class="body">
      <component type="typeof(Sidebar)" render-mode="WebAssemblyPrerendered" />

      <div class="properties">
         <div class="user-form">
            <p class="title">
               Verify Training Order #@Html.DisplayFor(model => model.TrainingOrder.Id)
            </p>
            <div class="field-container">
               @if (Model.TrainingOrder.Status == "Completed") {
                  <form method="post">

                     <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                     <input hidden asp-for="TrainingOrder.Id" />

                     <input asp-for="TrainingOrder.BeginDate" hidden />
                     <input asp-for="TrainingOrder.CompletionDate" hidden />
                     <input asp-for="TrainingOrder.CreateDate" hidden />

                     <input asp-for="TrainingOrder.Medium" hidden />
                     <input asp-for="TrainingOrder.Status" type="hidden" value="Verified" />
                     <input asp-for="TrainingOrder.Duration" hidden />

                     <input asp-for="TrainingOrder.Priority" hidden />
                     <input asp-for="TrainingOrder.LessonId" type="hidden" />
                     <input asp-for="TrainingOrder.ClosingNotes" hidden />

                     <input asp-for="TrainingOrder.TraineeId" hidden />
                     <input asp-for="TrainingOrder.LocationId" hidden />
                     <input asp-for="TrainingOrder.CreatedByUserId" hidden />

                     <component type="typeof(TrainingDetails)" render-mode="WebAssemblyPrerendered"
                     param-OrderId="@Model.TrainingOrder.Id" />

                     <br />
                     <div class="form-group">
                        <div class="form">
                           <div class="labels">
                              <p class="control-label">Has the individual grasped the training?</p>
                              <span asp-validation-for="VerifyNotes" class="text-danger"></span>
                           </div>
                           <textarea asp-for="VerifyNotes" rows="5"></textarea>
                        </div>
                     </div>
                     <div class="form-group">
                        <div class="form">
                           <div class="labels">
                              <p class="control-label">Signature</p>
                              <span asp-validation-for="Signature" class="text-danger"></span>
                           </div>
                           <input asp-for="Signature" class="form-control" />
                        </div>
                     </div>
                     <div class="form-group">
                        <div class="btn-container">
                           <input type="submit" value="Submit" class="btn bg-btn btnGreen" />
                        </div>
                     </div>
                  </form>
               } else {
                  <p>No.</p>
               }
            </div>
         </div>
      </div>
   </div>
</div>