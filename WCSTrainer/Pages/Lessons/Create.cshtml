@page
@model WCSTrainer.Pages.Lessons.CreateModel
<div class="panel">
   <div class="body">
      <partial name="_Sidebar" />
      <div class="properties">
         <div class="user-form">
            <p class="title">Create New Lesson</p>
            <p class="description">Fill out each required field.</p>
            <div class="field-container">
               <form method="post" enctype="multipart/form-data">
                  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                  <div class="form-group">
                     <div class="form">
                        <div class="labels">
                           <label asp-for="Lesson.Name" class="control-label">Lesson Name</label>
                           <span asp-validation-for="Lesson.Name" class="text-danger"></span>
                        </div>
                        <input asp-for="Lesson.Name" class="form-control" />
                     </div>
                     <div class="form">
                        <div class="labels">
                           <label class="control-label">Lesson Category</label>
                           <span asp-validation-for="Lesson.LessonCategoryId" class="text-danger"></span>
                        </div>
                        <select asp-for="Lesson.LessonCategoryId" class="form-drop2" asp-items="@Model.CategorySelectList"></select>
                     </div>
                  </div>
                  <div class="form-group">
                     <div class="form" id="imageUploadContainer">
                        <div class="labels">
                           <label class="control-label">Description Section</label>
                        </div>
                        <div class="image-upload-row">
                           <textarea name="ImageCaptions" placeholder="Optional description text"></textarea>
                           <label class="control-label">Upload Image (Optional)</label>
                           <input type="file" name="ImageUploads" accept=".jpg,.jpeg,.png,.gif" class="form-control-file" />
                        </div>
                     </div>
                  </div>
                  <div class="form-group">
                     <div class="btn-container">
                        <button type="button" id="addImageUpload" class="btn bg-btn btnBlue">Add Another Section</button>
                     </div>
                  </div>
                  <div class="form-group">
                     <div class="btn-container">
                        <input type="submit" value="Create" class="btn bg-btn btnGreen" />
                     </div>
                  </div>
               </form>
            </div>
         </div>
      </div>
   </div>
</div>
@section Scripts {
   <script>
      document.addEventListener('DOMContentLoaded', function() {
          const container = document.getElementById('imageUploadContainer');
          const addButton = document.getElementById('addImageUpload');
          addButton.addEventListener('click', function() {
              const newRow = container.querySelector('.image-upload-row').cloneNode(true);
              // Clear the file input value
              newRow.querySelector('input[type="file"]').value = '';
              // Clear the textarea content
              newRow.querySelector('textarea').value = '';
              // Add the cloned row to the container
              container.appendChild(newRow);
          });
      });
   </script>
}