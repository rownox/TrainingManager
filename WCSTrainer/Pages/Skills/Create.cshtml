@page
@model WCSTrainer.Pages.Skills.CreateModel

@{
   ViewData["Title"] = "Create";
}

<div class="panel">
   <div class="body">
      <component type="typeof(Sidebar)" render-mode="WebAssemblyPrerendered" />
      <div class="properties">
         <div class="user-form">
            <div class="field-container">
               <form method="post">
                  <div asp-validation-summary="All" class="text-danger"></div>
                  <input hidden asp-for="Skill.Id" />
                  <div class="form-group">
                     <div class="form">
                        <div class="labels">
                           <label asp-for="Skill.Name" class="control-label"></label>
                           <span asp-validation-for="Skill.Name" class="text-danger"></span>
                        </div>
                        <input asp-for="Skill.Name" class="form-control" />
                     </div>
                  </div>
                  <div class="form-group">
                     <div class="form">
                        <div class="labels">
                           <label asp-for="Skill.Description" class="control-label"></label>
                           <span asp-validation-for="Skill.Description" class="text-danger"></span>
                        </div>
                        <input asp-for="Skill.Description" class="form-control" />
                     </div>
                  </div>
                  <div class="form-group">
                     <div class="form">
                        <div class="labels">
                           <label asp-for="@Model.TrainingOrdersString" class="control-label"></label>
                           <span asp-validation-for="@Model.TrainingOrdersString" class="text-danger"></span>
                        </div>
                        <input asp-for="@Model.TrainingOrdersString" class="form-control" />
                     </div>
                  </div>
                  <div class="form-group">
                     <input type="submit" value="Save" class="btn bg-btn btnGreen" />
                  </div>
               </form>
            </div>
         </div>
      </div>
   </div>
</div>


@section Scripts {
   @{
      await Html.RenderPartialAsync("_ValidationScriptsPartial");
   }
}
