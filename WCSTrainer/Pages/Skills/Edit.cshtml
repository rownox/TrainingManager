@page
@model WCSTrainer.Pages.Skills.EditModel

<div class="panel">
   <div class="body">
      <partial name="_Sidebar" />
      <div class="properties">
         <div class="user-form">
            <p class="title">Skill #@Html.DisplayFor(model => model.Skill.Id)</p>
            <div class="field-container">
               <form method="post">
                  <div asp-validation-summary="All" class="text-danger"></div>
                  <input hidden asp-for="Skill.Id" />
                  <div class="form-group">
                     <div class="form">
                        <div class="labels">
                           <label asp-for="Skill.Name" class="control-label"></label>
                           <span asp-validation-for="Skill.Name" class="text-danger"></span>
                        </div>
                        <input asp-for="Skill.Name" class="form-control" />
                     </div>
                     <div class="form">
                        <div class="labels">
                           <p class="control-label">Skill Category</p>
                           <span asp-validation-for="Skill.SkillCategoryId" class="text-danger"></span>
                        </div>
                        <select asp-for="Skill.SkillCategoryId" class="form-drop2" asp-items="@Model.CategorySelectList"></select>
                     </div>
                  </div>
                  <div class="form-group">
                     <div class="form">
                        <div class="labels">
                           <label asp-for="Skill.Description" class="control-label"></label>
                           <span asp-validation-for="Skill.Description" class="text-danger"></span>
                        </div>
                        <input asp-for="Skill.Description" class="form-control" />
                     </div>
                  </div>
                  <div class="form-group">
                     <input type="submit" value="Save" class="btn bg-btn btnGreen" />
                  </div>
               </form>
            </div>
         </div>
      </div>
   </div>
</div>


@section Scripts {
   @{
      await Html.RenderPartialAsync("_ValidationScriptsPartial");
   }
}
