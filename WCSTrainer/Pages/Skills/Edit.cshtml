@page
@model WCSTrainer.Pages.Skills.EditModel

@{
   ViewData["Title"] = "Edit";
}

<hr />
<div class="row">
   <div class="col-md-4">
      <form method="post">
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         <input type="hidden" asp-for="Skill.Id" />
         <div class="form-group">
            <label asp-for="Skill.Name" class="control-label"></label>
            <input asp-for="Skill.Name" class="form-control" />
            <span asp-validation-for="Skill.Name" class="text-danger"></span>
         </div>
         <div class="form-group">
            <label asp-for="Skill.Description" class="control-label"></label>
            <input asp-for="Skill.Description" class="form-control" />
            <span asp-validation-for="Skill.Description" class="text-danger"></span>
         </div>
         <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
         </div>
      </form>
   </div>
</div>

<div>
   <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
   @{
      await Html.RenderPartialAsync("_ValidationScriptsPartial");
   }
}
