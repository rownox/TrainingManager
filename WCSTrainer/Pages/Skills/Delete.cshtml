@page
@model WCSTrainer.Pages.Skills.DeleteModel

<div class="panel">
   <div class="body">
      <partial name="_Sidebar" />
      <div class="properties">
         <div class="user-form">
            <p class="title">Skill #@Model.Skill.Id</p>
            <div class="field-container">
               <div class="text-group">
                  <p class="title">Name</p>
                  <p class="info">@Model.Skill.Name</p>
               </div>
               <div class="text-group">
                  <p class="title">Description</p>
                  <p class="info">@Model.Skill.Description</p>
               </div>
               <br />
               <form method="post" class="form-group">
                  <input hidden asp-for="Skill.Id" />
                  <input type="submit" value="Delete" class="btn bg-btn btnRed" />
               </form>
            </div>
         </div>
      </div>
   </div>
</div>
