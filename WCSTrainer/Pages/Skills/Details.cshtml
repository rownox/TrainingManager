@page
@model WCSTrainer.Pages.Skills.DetailsModel

@{
   ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
   <h4>Skill</h4>
   <hr />
   <dl class="row">
      <dd class="col-sm-10">
         @Html.DisplayFor(model => model.Skill.Name)
      </dd>
      <dd class="col-sm-10">
         @Html.DisplayFor(model => model.Skill.Description)
      </dd>
      @foreach (var order in Model.Skill.TrainingOrders) {
         <dd class="col-sm-10">
            Order #@order.Id
         </dd>
      }
   </dl>
</div>
<div>
   <a asp-page="./Edit" asp-route-id="@Model.Skill.Id">Edit</a> |
   <a asp-page="./Index">Back to List</a>
</div>
