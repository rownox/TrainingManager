@page
@model WCSTrainer.Pages.Locations.CreateModel

@{
   ViewData["Title"] = "Create";
}

<div class="panel">
   <div class="body">
      <partial name="_Sidebar" />
      <div class="properties">
         <div class="user-form">
            <p class="title">Create New Location</p>
            <p class="description">Fill out each required field.</p>
            <div class="field-container">
               <form method="post">
                  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                  <input hidden asp-for="Location.Id" />
                  <div class="form-group">
                     <div class="form">
                        <div class="labels">
                           <label asp-for="Location.Name" class="control-label"></label>
                           <span asp-validation-for="Location.Name" class="text-danger"></span>
                        </div>
                        <input asp-for="Location.Name" class="form-control" />
                     </div>
                  </div>
                  <div class="form-group">
                     <input type="submit" value="Save" class="btn bg-btn btnGreen" />
                  </div>
               </form>
            </div>
         </div>
      </div>
   </div>
</div>
